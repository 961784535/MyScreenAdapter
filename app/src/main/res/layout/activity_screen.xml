<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="信息"
            android:textSize="@dimen/dp_14" />

        <!--dimen 传值-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dimen 值:" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <TextView
                android:layout_width="@dimen/dp_350"
                android:layout_height="@dimen/dp_350"
                android:background="@color/ColorAniBack"
                android:gravity="bottom|center"
                android:text="350dp 22sp"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:layout_width="@dimen/dp_300"
                android:layout_height="@dimen/dp_300"
                android:background="@color/colorAccent"
                android:gravity="bottom|center"
                android:text="300dp 20sp"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_250"
                android:background="@color/colorPrimary"
                android:gravity="bottom|center"
                android:text="250dp 18sp"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:background="@color/colorPrimaryDark"
                android:gravity="bottom|center"
                android:text="200dp 16sp"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                android:background="@color/colorGreen"
                android:gravity="bottom|center"
                android:text="150dp 14sp"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:background="@color/colorOrange"
                android:gravity="bottom|center"
                android:text="100dp 12"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@color/colorRed"
                android:gravity="bottom|center"
                android:text="50dp 10sp"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@color/colorSkyBlue"
                android:gravity="bottom|center"
                android:text="25" />

        </RelativeLayout>

        <!--dp 固定值-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dp 值:" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <TextView
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:background="@color/ColorAniBack"
                android:gravity="bottom|center"
                android:text="350dp 22sp"
                android:textSize="22sp" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/colorAccent"
                android:gravity="bottom|center"
                android:text="300dp 20sp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@color/colorPrimary"
                android:gravity="bottom|center"
                android:text="250dp 18sp"
                android:textSize="18sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="bottom|center"
                android:text="200dp 16sp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/colorGreen"
                android:gravity="bottom|center"
                android:text="150dp 14sp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorOrange"
                android:gravity="bottom|center"
                android:text="100dp 12sp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorRed"
                android:gravity="bottom|center"
                android:text="50dp 10sp"
                android:textSize="10sp" />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/colorSkyBlue"
                android:gravity="bottom|center"
                android:text="25" />

        </RelativeLayout>

        <!--px 固定值-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="px 值:" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <TextView
                android:layout_width="350px"
                android:layout_height="350px"
                android:background="@color/ColorAniBack"
                android:gravity="bottom|center"
                android:text="350" />

            <TextView
                android:layout_width="300px"
                android:layout_height="300px"
                android:background="@color/colorAccent"
                android:gravity="bottom|center"
                android:text="300" />

            <TextView
                android:layout_width="250px"
                android:layout_height="250px"
                android:background="@color/colorPrimary"
                android:gravity="bottom|center"
                android:text="250" />

            <TextView
                android:layout_width="200px"
                android:layout_height="200px"
                android:background="@color/colorPrimaryDark"
                android:gravity="bottom|center"
                android:text="200" />

            <TextView
                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@color/colorGreen"
                android:gravity="bottom|center"
                android:text="150" />

            <TextView
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="@color/colorOrange"
                android:gravity="bottom|center"
                android:text="100" />

            <TextView
                android:layout_width="50px"
                android:layout_height="50px"
                android:background="@color/colorRed"
                android:gravity="bottom|center"
                android:text="50" />

            <TextView
                android:layout_width="25px"
                android:layout_height="25px"
                android:background="@color/colorSkyBlue"
                android:gravity="bottom|center"
                android:text="25" />

        </RelativeLayout>
    </LinearLayout>


</ScrollView>